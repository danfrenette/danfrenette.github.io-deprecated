%html{xmlns: "http://www.w3.org/1999/xhtml"}
  %head
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{content: "width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1", name: "viewport"}/
    %title Contact Email
  %body
    %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
      %tr
        %td{align: "center", background: "#{asset_path("email-images/background.png")}", bgcolor: "#ffffff", style: "background-repeat:repeat-x; background-size:100% auto;background-position:top;"}
          %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0"}
            %tr
              %td{align: "center", width: "500"}
                %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
                  %tr
                    %td{height: "50"}
                  / header logo
                  -# %tr
                  -#   %td{align: "center", style: "line-height: 0px;"}
                  -#     %img{alt: "logo", src: "images/logo.png", style: "display:block; line-height:0px; font-size:0px; border:0px;", width: "131"}/
                  / end header logo
                  %tr
                    %td{height: "5"}
                  / slogan
                  -# %tr
                  -#   %td{align: "center", style: "font-family: 'Open Sans', Arial, sans-serif; color:#898989; font-size:12px;line-height: 28px; font-style:italic;"} Newsletter Bundle
                  / end slogan
                  %tr
                    %td{height: "25"}
                %table.table-inner{align: "center", bgcolor: "#414a51", border: "0", cellpadding: "0", cellspacing: "0", style: "border-radius:6px;", width: "100%"}
                  %tr
                    %td{height: "50"}
                  / title
                  %tr
                    %td{align: "center", style: "font-family: 'Century Gothic', Arial, sans-serif; color:#ffffff; font-size:28px;font-weight: bold; letter-spacing: 5px;"}= @contact_email.subject
                  / end title
                  %tr
                    %td{height: "20"}
                  / dash
                  %tr
                    %td{align: "center"}
                      %table{align: "center", bgcolor: "#c86e6e", border: "0", cellpadding: "0", cellspacing: "0", style: "border-radius:5px;", width: "50"}
                        %tr
                          %td{height: "5", style: "line-height: 0px;font-size: 0px;"}
                  / end dash
                  %tr
                    %td{height: "35"}
                  %tr
                    %td{align: "center", bgcolor: "#3c444b"}
                      %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
                        %tr
                          %td{height: "30"}
                        %tr
                          %td{align: "center", style: "text-align:center;vertical-align:top;font-size:0;"}
                            / image
                            %div{style: "display:inline-block;vertical-align:top;"}
                              %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0"}
                                %tr
                                  %td{align: "center", width: "250"}
                                    %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0"}
                                      %tr
                                        %td{align: "center", style: "line-height: 0px;"}
                                          %img.img1{alt: "img", src: "#{gravatar(@contact_email.email)}", style: "display:block; lidth: 100%; line-height:0px; font-size:0px; border:0px;"}/
                                      %tr
                                        %td{height: "25"}
                            / end image
                            /[if (gte mso 9)|(IE)]
                              </td>
                              <td align="center" style="text-align:center;vertical-align:top;font-size:0;">
                            / right
                            %div{style: "display:inline-block;vertical-align:top;"}
                              %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0"}
                                %tr
                                  %td.table-full{align: "center", width: "250"}
                                    %table.table-full{align: "center", border: "0", cellpadding: "0", cellspacing: "0", width: "90%"}
                                      / title
                                      %tr
                                        %td{style: "font-family: 'Open sans', Arial, sans-serif; color:#c86e6e; font-size:16px;font-weight: bold; line-height: 28px;"}= @contact_email.email
                                      / end title
                                      / content
                                      %tr
                                        %td{style: "font-family: 'Open sans', Arial, sans-serif; color:#ffffff; font-size:14px; line-height: 28px;"} Lorem ipsum dolor sit.
                                      / end content
                                      %tr
                                        %td{height: "5"}
                                      / list 1
                                      %tr
                                        %td
                                          %table{border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
                                            %tr
                                              %td{align: "center", style: "line-height: 0px;"}
                                                = image_tag "email-images/fb.png", width: "15",
                                                  style:"display:block; line-height:0px; font-size:0px; border:0px;"
                                              %td{align: "left", style: "font-family: 'Open sans', Arial, sans-serif; color:#ffffff; font-size:14px; line-height: 28px;padding-left: 10px;"} MailChimp
                                      / end list 1
                                      / list 2
                                      %tr
                                        %td
                                          %table{border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
                                            %tr
                                              %td{align: "center", style: "line-height: 0px;"}
                                                = image_tag "email-images/tw.png", width: "15",
                                                  style:"display:block; line-height:0px; font-size:0px; border:0px;"
                                              %td{align: "left", style: "font-family: 'Open sans', Arial, sans-serif; color:#ffffff; font-size:14px; line-height: 28px;padding-left: 10px;"} MailChimp
                                      / end list 2
                                      / list 3
                                      %tr
                                        %td
                                          %table{border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
                                            %tr
                                              %td{align: "center", style: "line-height: 0px;"}
                                                = image_tag "email-images/in.png", width: "15",
                                                  style:"display:block; line-height:0px; font-size:0px; border:0px;"
                                              %td{align: "left", style: "font-family: 'Open sans', Arial, sans-serif; color:#ffffff; font-size:14px; line-height: 28px;padding-left: 10px;"} MailChimp
                                      / end list 3
                                %tr
                                  %td{height: "30"}
                            / end right
                  %tr
                    %td{align: "center"}
                      %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0", width: "90%"}
                        %tr
                          %td{height: "35"}
                        / content
                        %tr
                          %td{align: "center", style: "font-family: 'Open sans', Arial, sans-serif; color:#ffffff; font-size:14px; line-height: 28px;"}
                            = @contact_email.body
                        / end content
                        %tr
                          %td{height: "25"}
                %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
                  %tr
                    %td{height: "10"}
:css
  .ReadMsgBody { width: 100%; background-color: #FFFFFF; }
  .ExternalClass { width: 100%; background-color: #FFFFFF; }
  .ExternalClass, .ExternalClass p, .ExternalClass span, .ExternalClass font, .ExternalClass td, .ExternalClass div { line-height: 100%; }
  html { width: 100%; }
  body { -webkit-text-size-adjust: none; -ms-text-size-adjust: none; margin: 0; padding: 0; }
  table { border-spacing: 0; table-layout: fixed; margin: 0 auto; }
  table table table { table-layout: auto; }
  .yshortcuts a { border-bottom: none !important; }
  img:hover { opacity: 0.9 !important; }
  a { color: #c86e6e; text-decoration: none; }
  .textbutton a { font-family: 'open sans', arial, sans-serif !important;}
  .btn-link a { color:#FFFFFF !important;}
  
  /*Responsive*/
  @media only screen and (max-width: 480px) {
  body { width: auto !important; }
  *[class="table-inner"] { width: 90% !important; text-align: center !important; }
  *[class="table-full"] { width: 100% !important; text-align: center !important; }
  /* image */
  img[class="img1"] { width: 100% !important; height: auto !important; }
  }
